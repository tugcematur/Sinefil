@model Sinefil.Models.Viewmodels.FilmModel

@{
    ViewBag.Title = "Edit Movie";
}

<center><p class="head">Edit Movie</p></center>

<div class="row">
    <div class="d-flex justify-content-center align-items-center">
        <div class="col-md-4">
            <form method="post" id="filmForm">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Director"></label>
                    <input asp-for="Director" class="form-control" />
                    <span asp-validation-for="Director" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Genre"></label>
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" style="height:300px;"></textarea>

                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImgUrl"></label>
                    <input asp-for="ImgUrl" class="form-control" />
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                    @*   <input type="text" id="imgUrl" name="ImgUrl" placeholder="Resim URL'si" class="form-control"/>
                    <span id="errorMsg" style="color:red;"></span><br /> *@
                </div>
                <div class="form-group d-flex justify-content-center  mt-2">
                    <input type="submit" class="btn btn-primary btn-size" value="OK" />
                </div>
                <input asp-for="FilmId" type="hidden" />

            </form>

        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}